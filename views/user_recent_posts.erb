<div class="postBox">
<% @user_posts.limit(20).order('created_on DESC').each do |post_element| %>
    <h1 class="postFont"> <a href="/post/<%= post_element.id %>"> <%= post_element.title %> </a> </h1>
    <img class="postCenter" src="<%= post_element.image %>">
    <div class="postFont"> <%= post_element.content %> </div>
    <div class="small">
        <span><small>Created by <%= @single_user.username %> at <%= post_element.created_on %> </small></span>
    </div>
    <hr>
<% end %>
</div>